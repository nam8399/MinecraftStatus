<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.minecraftstatus.viewModel.ServerListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".View.Fragment.UserFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F4CD">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/titlebackground"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/server_status_off"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/icon_grass"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.7"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="서버 주소">
                        </TextView>
                        <EditText
                            android:id="@+id/server_host_off"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="@={viewModel.serverHostTxt}"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/icon_rock"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.7"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="서버 종류">
                        </TextView>
                        <Spinner
                            android:id="@+id/server_edition_spinner"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="자바"
                            android:selectedItemPosition="@={viewModel.serverEditionIndex}"
                            android:gravity="left|center"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/icon_rock"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.7"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="저장 슬롯">
                        </TextView>
                        <Spinner
                            android:id="@+id/server_slot_spinner"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="자바"
                            android:selectedItemPosition="@={viewModel.serverSlotIndex}"
                            android:gravity="left|center"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                        </Spinner>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/btn_serverAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="서버 추가"
                            android:padding="3dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:onClick="@{()->viewModel.getMinecraftServer()}"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="90dp"
                            android:background="@drawable/layout_background">
                        </TextView>
                        <ImageView
                            android:id="@+id/btn_refresh"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_refresh"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">
                        </ImageView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/linear1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/search_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_board"
                android:background="#F0F4CD"
                android:text="homefragment" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_board"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.55"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/linear2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#F0F4CD"
                android:text="" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>


