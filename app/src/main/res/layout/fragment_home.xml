<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.minecraftstatus.viewModel.HomeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFECD3"
        tools:context=".View.Fragment.HomeFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/titlebackground"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/scrollView"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/server_status_on"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_margin="15dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:background="@drawable/layout_background_white"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/server_name"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="@{viewModel.serverName}"
                                android:gravity="left|center"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                            <ImageView
                                android:id="@+id/btn_refresh"
                                android:paddingLeft="20dp"
                                android:src="@drawable/icon_refresh"
                                android:onClick="@{()->viewModel.getMineacraftServer()}"
                                android:textColor="@color/black"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.7">
                            </ImageView>
                            <ImageView
                                android:id="@+id/btn_back"
                                android:paddingLeft="20dp"
                                android:src="@drawable/icon_back"
                                android:onClick="@{()->viewModel.onEvent(false)}"
                                android:textColor="@color/black"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.7">
                            </ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_grass"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 상태">
                            </TextView>
                            <TextView
                                android:id="@+id/server_status"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@{viewModel.serverStatus}"
                                android:gravity="left|center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_rock"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 주소">
                            </TextView>
                            <TextView
                                android:id="@+id/server_host"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@{viewModel.serverInputHost}"
                                android:gravity="left|center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_emerald"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 버전">
                            </TextView>
                            <TextView
                                android:id="@+id/server_version"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@{viewModel.serverVersion}"
                                android:gravity="left|center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_diamond"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 인원">
                            </TextView>
                            <TextView
                                android:id="@+id/server_people"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@{viewModel.serverPeople}"
                                android:gravity="left|center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/server_status_off"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_margin="15dp"
                        android:padding="10dp"
                        android:background="@drawable/layout_background_white"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/server_status_on"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="서버 등록"
                                android:gravity="left|center"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_grass"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 주소">
                            </TextView>
                            <EditText
                                android:id="@+id/server_host_off"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@={viewModel.serverHostTxt}"
                                android:gravity="left|center"
                                android:textColor="@color/black"
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_rock"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 종류">
                            </TextView>
                            <Spinner
                                android:id="@+id/server_edition_spinner"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="자바"
                                android:selectedItemPosition="@={viewModel.serverEditionIndex}"
                                android:gravity="left|center"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </Spinner>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/icon_emerald"
                                    android:layout_gravity="center">
                                </ImageView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:text="서버 이름">
                            </TextView>
                            <EditText
                                android:id="@+id/server_name_off"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="@={viewModel.serverName}"
                                android:gravity="left|center"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">
                            </EditText>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/btn_serverAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="메인 서버 등록"
                            android:padding="3dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:onClick="@{()->viewModel.getMineacraftServer()}"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/layout_background">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/build_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/server_status_off">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="건축 꿀팁"
                            android:gravity="left|center"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/build_guide"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:background="@drawable/layout_background_white"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/build_text"
                        tools:ignore="MissingConstraints">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.viewpager2.widget.ViewPager2
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/viewpager2"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="20dp"
                                android:orientation="horizontal"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:id="@+id/indicators"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/viewpager2"
                                app:layout_constraintBottom_toBottomOf="parent"

                                android:padding="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/build_text2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/build_guide">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="유용한 사이트"
                            android:gravity="left|center"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/build_guide2"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:background="@drawable/layout_background_white"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/build_text2"
                        tools:ignore="MissingConstraints">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/empty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/build_guide2"
                        tools:ignore="MissingConstraints">
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <TextView
                android:id="@+id/testtext"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="homefragment" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>


