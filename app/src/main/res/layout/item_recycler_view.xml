<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/server_status_on"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:visibility="visible"
    android:background="@drawable/layout_background_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/server_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
        </TextView>
        <ImageView
            android:id="@+id/btn_refresh"
            android:paddingLeft="20dp"
            android:src="@drawable/icon_refresh"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.7">
        </ImageView>
        <ImageView
            android:id="@+id/btn_back"
            android:paddingLeft="20dp"
            android:src="@drawable/icon_back"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.7">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_grass"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="서버 상태">
        </TextView>
        <TextView
            android:id="@+id/server_status"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_rock"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="서버 주소">
        </TextView>
        <TextView
            android:id="@+id/server_host"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_emerald"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="서버 버전">
        </TextView>
        <TextView
            android:id="@+id/server_version"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_diamond"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="서버 인원">
        </TextView>
        <TextView
            android:id="@+id/server_people"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
        </TextView>
    </LinearLayout>
</LinearLayout>
